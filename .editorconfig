root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.js]
indent_size = 2
[*.jsx]
indent_size = 2
[*.ts]
indent_size = 2
[*.tsx]
indent_size = 2
[*.css]
indent_size = 2
[*.scss]
indent_size = 2
[*.json]
indent_size = 2
[*.yml]
indent_size = 2
[*.yaml]
indent_size = 2
[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.bat]
end_of_line = crlf

[*.ps1]
end_of_line = crlf